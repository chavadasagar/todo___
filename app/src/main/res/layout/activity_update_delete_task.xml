<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".update_delete_task">


    <TextView
        android:id="@+id/textView2"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/ic_baseline_update_24"
        android:drawablePadding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update or Delete Task" />

    <EditText
        android:padding="10dp"
        android:layout_margin="10dp"
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_title_24"
        android:drawablePadding="10dp"
        android:inputType="textPersonName"
        android:hint="Task Name" />

    <EditText
        android:padding="10dp"
        android:layout_margin="10dp"
        android:id="@+id/editTextTextPersonName4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:drawableLeft="@drawable/ic_baseline_description_24"
        android:drawablePadding="10dp"
        android:hint="Description (Optional)" />

   <LinearLayout
       android:id="@+id/btn_bar"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="10dp"
       android:gravity="center"
       android:orientation="horizontal">
       <Button
           android:padding="10dp"
           android:layout_margin="10dp"
           android:id="@+id/button2"
           android:drawableLeft="@drawable/ic_baseline_update_24"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"

           android:text="Update" />

       <Button
           android:padding="10dp"
           android:id="@+id/button3"
           android:drawableLeft="@drawable/ic_baseline_delete_24"
           android:layout_margin="10dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Delete" />


   </LinearLayout>
    <Button
        android:layout_gravity="center"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
        android:id="@+id/button4"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back" />
</LinearLayout>